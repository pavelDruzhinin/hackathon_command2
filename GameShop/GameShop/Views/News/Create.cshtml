@model GameShop.Models.News

@{
    ViewBag.Title = "Создание новости";
}

<h2>Создание новости</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <!--<h4>Новости</h4>-->
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            <label class="control-label col-md-2" for="Name">Заголовок новости</label>
            <!--Html.LabelFor(model => model.NewsHeader, htmlAttributes: new { class = "control-label col-md-2" })-->
            <div class="col-md-10">
                @Html.EditorFor(model => model.NewsHeader, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.NewsHeader, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2" for="Name">Текст новости</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.NewsBody, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.NewsBody, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Возврат к списку новостей", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
